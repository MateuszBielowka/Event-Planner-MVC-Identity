@model IEnumerable<Event>

<h2>Lista Wydarzeń</h2>

<form asp-action="EventsOverview" method="get">
    <div class="form-actions no-color">
        <p>
            <label>Szukaj nazwy lub adresu: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" /></label>
            <button type="submit">Szukaj</button>
            <a asp-action="EventsOverview">Resetuj</table></a>
        </p>
    </div>
</form>

<h5>Sortuj według:</h5>
<tr>
    <th>
        <a asp-action="EventsOverview" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model =>
                        model.EventName)</a>
    </th>
    <th>
        <a asp-action="EventsOverview" asp-route-sortOrder="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model =>
                        model.EventDate)</a>
    </th>
    <th></th>
</tr>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nazwa</th>
            <th>Adres</th>
            <th>Data</th>

        </tr>
    </thead>
    <tbody>
    @foreach(var w in Model)
    {
        <tr>
            <td>@w.EventId</td>
            <td>@w.EventName</td>
            <td>@w.Address</td>
            <td>@w.EventDate</td>
            <td> <a asp-action="DeleteEvent" asp-route-id="@w.EventId">Usuń</a></td>
        </tr>
    }
    </tbody>
</table>