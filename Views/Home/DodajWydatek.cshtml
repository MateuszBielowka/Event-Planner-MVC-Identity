<h2>Dodaj Wydatek</h2>


@if (ViewBag.Error != null)
{
    <div style="color:red">@ViewBag.Error</div>
}
<form method="post" itemid="=" id="wydatekForm" action="/Home/DodajWydatek">
    @* <textarea name="nazwa1"></textarea><br />
    <textarea name="adres1"></textarea><br />
    <input type="date" name="data1" /><br /> *@
    <input type="number" step="0.01" id="kwota" placeholder="Kwota" />
    <input type="hidden" name="liczba1" id="liczba1" />
    <input type="text" name="nazwa1" placeholder="Cel" /><br />
    <input type="number" name="liczba2" step="1" placeholder="Id pracownika" /><br />

    <button type="submit">Zapisz</button>
</form>

<script>
document.getElementById('wydatekForm').addEventListener('submit', function(e) {
    var kwota = document.getElementById('kwota').value.replace(',', '.');
    var grosze = Math.round(parseFloat(kwota) * 100);
    document.getElementById('liczba1').value = isNaN(grosze) ? 0 : grosze;
});
</script>