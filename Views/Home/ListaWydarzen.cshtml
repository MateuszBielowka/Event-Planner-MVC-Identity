@model IEnumerable<Wydarzenie>

<h2>Lista Wydarzeń</h2>

<form asp-action="ListaWydarzen" method="get">
    <div class="form-actions no-color">
        <p>
            <label>Szukaj nazwy lub adresu: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" /></label>
            <button type="submit">Szukaj</button>
            <a asp-action="ListaWydarzen">Resetuj</table></a>
        </p>
    </div>
</form>

<h5>Sortuj według:</h5>
<tr>
    <th>
        <a asp-action="ListaWydarzen" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model =>
                        model.Nazwa)</a>
    </th>
    <th>
        <a asp-action="ListaWydarzen" asp-route-sortOrder="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model =>
                        model.Data)</a>
    </th>
    <th></th>
</tr>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nazwa</th>
            <th>Adres</th>
            <th>Data</th>

        </tr>
    </thead>
    <tbody>
    @foreach(var w in Model)
    {
        <tr>
            <td>@w.IdWydarzenia</td>
            <td>@w.Nazwa</td>
            <td>@w.Adres</td>
            <td>@w.Data</td>
            <td> <a asp-action="UsunWydarzenie" asp-route-id="@w.IdWydarzenia">Usuń</a></td>
        </tr>
    }
    </tbody>
</table>